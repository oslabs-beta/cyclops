{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    // "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "lib": ["es6", "dom"],
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./server", "./custom.d.ts"],
  "exclude": ["node_modules", "./src/__tests__", "./dist"]
}
