{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./src", "./server", "custom.d.ts", "./public/images/connected_icon.png"],
  "exclude": ["node_modules", "./src/__tests__"]
}
